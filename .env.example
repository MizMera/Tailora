# Django Configuration
SECRET_KEY=your-secret-key-here
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration
DB_ENGINE=django.db.backends.sqlite3
DB_NAME=db.sqlite3
# For PostgreSQL:
# DB_ENGINE=django.db.backends.postgresql
# DB_NAME=tailora_db
# DB_USER=your_db_user
# DB_PASSWORD=your_db_password
# DB_HOST=localhost
# DB_PORT=5432

# Weather API (OpenWeatherMap)
# Sign up at https://openweathermap.org/api to get your free API key
OPENWEATHER_API_KEY=your_openweathermap_api_key_here

# CORS Settings
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# Email Configuration (optional)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password

# AWS S3 Configuration (optional, for production media storage)
# USE_S3=False
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_STORAGE_BUCKET_NAME=tailora-media
# AWS_S3_REGION_NAME=us-east-1

# --- AI Image Analysis (Vision) ---
# Option A: OpenRouter or any OpenAI-compatible Qwen endpoint
# Put your OpenRouter key here if you want to use Qwen via OpenAI-compatible API.
# This activates automatically because the analyzer factory reads these env vars.
# Example for OpenRouter Qwen3 VL 8B:
QWEN_API_KEY=
QWEN_API_BASE=https://openrouter.ai/api/v1
# Use the exact model id from OpenRouter's catalog, e.g.:
#   qwen/qwen-3-vl-8b, or qwen/qwen-2.5-vl-7b-instruct
QWEN_MODEL=qwen/qwen-3-vl-8b

# Option B: Hugging Face hosted Qwen2.5-VL
# If both HF_* and QWEN_* are set, HF takes precedence.
HF_API_TOKEN=
HF_QWEN_MODEL=Qwen/Qwen2.5-VL-7B-Instruct
HF_QWEN_ENDPOINT=https://api-inference.huggingface.co/v1/chat/completions
